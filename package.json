{
	"name": "megacollab",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"license": "GPL-3.0-only",
	"scripts": {
		"dev": "ENV=development run-p dev:server dev:vue",
		"dev:server": "bun --bun --watch server/server.ts",
		"dev:vue": "bun --bun vite",
		"build": "run-p typecheck test build:vue",
		"build:vue": "ENV=production vite build",
		"test": "bun test",
		"typecheck": "run-p typecheck:server typecheck:vue",
		"typecheck:vue": "vue-tsc --build",
		"typecheck:server": "tsc --noEmit -p tsconfig.server.json",
		"lint": "eslint . --fix --cache --cache-location node_modules/.cache/.eslintcache",
		"format": "prettier --write --experimental-cli .",
		"start": "ENV=production bun --bun server/server.ts",
		"cleanup": "rm -rf dev.audiofiles dev.database dist",
		"prepare": "husky"
	},
	"dependencies": {
		"@breezystack/lamejs": "^1.2.7",
		"@electric-sql/pglite": "^0.3.14",
		"@floating-ui/vue": "^1.1.9",
		"@socket.io/bun-engine": "^0.1.0",
		"@vueuse/components": "^14.1.0",
		"@vueuse/core": "^14.1.0",
		"chalk": "^5.6.2",
		"cookie": "^1.1.1",
		"culori": "^4.0.2",
		"dotenv": "^17.2.3",
		"file-type": "^21.1.1",
		"hono": "^4.10.7",
		"is-mobile": "^5.0.0",
		"kleur": "^4.1.5",
		"lucide-vue-next": "^0.556.0",
		"nanoid": "^5.1.6",
		"p-queue": "^9.0.1",
		"pg": "^8.16.3",
		"sanitize-html": "^2.17.0",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"unique-names-generator": "^4.7.1",
		"vue": "^3.5.26",
		"vue-router": "^4.6.4",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@tsconfig/node24": "^24.0.3",
		"@types/bun": "^1.3.3",
		"@types/culori": "^4.0.1",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"@vitejs/plugin-vue": "^6.0.2",
		"@vue/eslint-config-prettier": "^10.2.0",
		"@vue/eslint-config-typescript": "^14.6.0",
		"@vue/tsconfig": "^0.8.1",
		"eslint": "^9.39.1",
		"eslint-plugin-vue": "~10.5.1",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"prettier": "3.6.2",
		"typescript": "~5.9.0",
		"vite": "npm:rolldown-vite@latest",
		"vite-plugin-vue-devtools": "^8.0.5",
		"vue-tsc": "^3.2.0"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"eslint",
			"prettier --write"
		],
		"*.{json,md,html,css}": [
			"prettier --write"
		]
	}
}
